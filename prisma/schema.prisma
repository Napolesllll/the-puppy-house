// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== MODELOS PARA RAZAS =====

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  description String?
  image     String?  // URL de imagen desde Cloudinary
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  breeds Breed[]

  @@map("categories")
}

model Breed {
  id          String   @id @default(cuid())
  name        String
  description String
  slug        String   @unique
  image       String   // URL de imagen principal
  desde       String?  // "a partir de"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relaciones
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  prices      BreedPrice[]
  images      BreedImage[]
  promotions  Promotion[]

  @@map("breeds")
}

model BreedPrice {
  id        String   @id @default(cuid())
  malePrice   Int      // Precio macho en pesos
  femalePrice Int      // Precio hembra en pesos
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  breedId   String
  breed     Breed    @relation(fields: [breedId], references: [id], onDelete: Cascade)

  @@unique([breedId])
  @@map("breed_prices")
}

model BreedImage {
  id        String   @id @default(cuid())
  url       String
  order     Int      @default(0) // Para ordenar las imágenes
  createdAt DateTime @default(now())

  // Relaciones
  breedId   String
  breed     Breed    @relation(fields: [breedId], references: [id], onDelete: Cascade)

  @@map("breed_images")
}

// ===== MODELO PARA PROMOCIONES =====

model Promotion {
  id          String   @id @default(cuid())
  title       String   // Título de la promoción
  description String   // Descripción de la promoción
  discount    Int      // Porcentaje de descuento (ej: 20 para 20%)
  image       String   // Imagen de la promoción
  badge       String?  // Badge opcional (NUEVO, HOT, LIMITADO, etc.)
  startDate   DateTime // Fecha de inicio
  endDate     DateTime // Fecha de fin
  isActive    Boolean  @default(true) // Si está activa o no
  isFeatured  Boolean  @default(false) // Destacada en la página principal
  order       Int      @default(0) // Orden de aparición
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relaciones
  breedId     String?
  breed       Breed?   @relation(fields: [breedId], references: [id], onDelete: Cascade)

  @@map("promotions")
}

// ===== MODELOS PARA ADMINISTRACIÓN =====

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hash bcrypt
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin_users")
}

// ===== MODELOS PARA CONTACTOS Y RESERVAS (Futuro) =====

model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String
  status    String   @default("pending") // pending, in_progress, resolved
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}
